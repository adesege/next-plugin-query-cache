  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist"
  },
  "exclude": ["**/*.test.ts"],
  "include": ["src/**/*"]
}
